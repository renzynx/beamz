{
  "name": "@beam/background-jobs",
  "version": "1.0.0",
  "description": "Beam file management background jobs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --minify --outdir ./dist",
    "start": "bun dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@beam/db": "workspace:*",
    "dotenv": "^17.2.1",
    "node-cron": "^4.2.1",
    "@ffmpeg-installer/ffmpeg": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "cron",
    "cleanup",
    "microservice"
  ],
  "author": "renzynx",
  "license": "MIT"
}
