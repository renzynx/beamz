{
  "name": "beam",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "start": "turbo start",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F @beam/web dev",
    "dev:server": "turbo -F @beam/server dev",
    "db:push": "turbo -F @beam/database db:push",
    "db:studio": "turbo -F @beam/database db:studio",
    "db:generate": "turbo -F @beam/database db:generate",
    "db:migrate": "turbo -F @beam/database db:migrate"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0"
  },
  "packageManager": "bun@1.2.21"
}
