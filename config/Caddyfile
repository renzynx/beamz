:3333 {
	# This file configures Caddy to act as a reverse proxy for the Beamz services.
	# IMPORTANT: The application requires a proxy to route API requests to the API service
	# and all other requests to the web server. Example routing:
	#   /api/*  -> beamz:3333 (API)
	#   /*      -> beamz:3000 (Web)

	# Handle API routes - preserve the /api path
	handle /api/* {
		reverse_proxy beamz:3333
	}

	# Handle all other routes (web application)
	handle {
		reverse_proxy beamz:3000
	}

	# Enable logging for debugging
	log {
		output stdout
		format console
	}
}
